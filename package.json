{
  "name": "cparl-payroll-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "seed": "ts-node-esm prisma/seed.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "db:sync": "prisma migrate dev && prisma generate",
    "db:ui": "prisma studio",
    "db:push": "prisma db push && prisma generate",
    "db:reset": "prisma migrate reset && prisma generate",
    "db:watch": "prisma migrate dev --watch",
    "postinstall": "prisma generate",
    "db:pull": "drizzle-kit pull"
  },
  "prisma": {
    "schema": "db/prisma/schema.prisma"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "lucide-react": "^0.562.0",
    "next": "^16.0.10",
    "pg": "^8.17.2",
    "prisma": "^6.19.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.69.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/next": "^8.0.7",
    "@types/node": "^20.19.27",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19",
    "@vitest/ui": "^4.0.17",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.6",
    "jsdom": "^27.4.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
