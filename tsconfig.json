//Ctrl+Shift+P (Windows) -> TypeScript: Restart TS Server.

{
  "compilerOptions": {
    "target": "ES2017",

    "module": "esnext", //"NodeNext",
    "moduleResolution": "bundler", //bundler means Webpack or Turnopack, it tells TS "trust that the build tool (next.js) knows how to find these modules, which resolves internal package exports like next/link; "NodeNext" is too modern.
    "allowImportingTsExtensions": false, //if true,import x.ts works

    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    // "module": "esnext",
    // "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    ".vscode/db/prisma/prisma.ts"
  ],
  "exclude": ["node_modules"]
}
